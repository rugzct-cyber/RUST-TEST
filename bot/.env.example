# =============================================================================
# HFT Arbitrage Bot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# Vest Exchange (EIP-712 signatures)
# =============================================================================

# Primary account address (holds balances)
# Format: 0x prefix + 40 hex characters (Ethereum address)
# Example: 0x1234567890123456789012345678901234567890
VEST_PRIMARY_ADDR=0x...

# Primary private key (for registration signature)
# Format: 0x prefix + 64 hex characters (32 bytes)
# Example: 0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
VEST_PRIMARY_KEY=0x...

# Signing/delegate private key (for orders)
# Format: 0x prefix + 64 hex characters (32 bytes)
# Can be same as primary key or different for security separation
VEST_SIGNING_KEY=0x...

# Account group for server routing
# Format: Single digit 0-9 (default: 0)
VEST_ACCOUNT_GROUP=0

# Use production endpoints (true/false, default: true)
# WARNING: Set to true only when trading with real funds!
VEST_PRODUCTION=true

# =============================================================================
# Paradex Exchange (Starknet signatures)
# =============================================================================

# Starknet private key
# Format: 0x prefix + up to 64 hex characters (Starknet felt252)
# Example: 0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
PARADEX_PRIVATE_KEY=0x...

# L2 account address (optional - will be derived from private key if empty)
# Format: 0x prefix + up to 64 hex characters
PARADEX_ACCOUNT_ADDRESS=

# Use production endpoints (true/false, default: true)
# WARNING: Set to true only when trading with real funds!
PARADEX_PRODUCTION=true

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================

# Log level filter
# Format: module=level (trace, debug, info, warn, error)
# Examples: "info", "hft_bot=debug", "hft_bot=info,tokio=warn"
RUST_LOG=hft_bot=info

# Log format: json or pretty (default: json)
LOG_FORMAT=pretty

# =============================================================================
# Supabase Backend (Required for Epic 3 - State Persistence)
# =============================================================================
# Get these from: https://app.supabase.com → Project Settings → API

# Supabase project URL
# Format: https://<project-id>.supabase.co
# Example: https://abcdefghijklmnop.supabase.co
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous (public) API key
# Format: JWT token (starts with eyJ...)
# This is safe to expose client-side (anon key, NOT service_role key!)
# Example: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSI...
SUPABASE_ANON_KEY=your-anon-key-here

# Optional: Explicitly enable/disable Supabase (default: enabled if URL set)
SUPABASE_ENABLED=true
