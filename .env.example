# =============================================================================
# HFT Arbitrage Bot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Vest Exchange (EIP-712 signatures)
# -----------------------------------------------------------------------------
# Primary account address (holds balances)
VEST_PRIMARY_ADDR=0x...

# Primary private key (for registration signature)
VEST_PRIMARY_KEY=0x...

# Signing/delegate private key (for orders)
VEST_SIGNING_KEY=0x...

# Account group for server routing (0-9, default: 0)
VEST_ACCOUNT_GROUP=0

# Use production endpoints (true/false, default: true)
VEST_PRODUCTION=true

# -----------------------------------------------------------------------------
# Paradex Exchange (Starknet signatures)
# -----------------------------------------------------------------------------
# Starknet private key
PARADEX_PRIVATE_KEY=0x...

# L2 account address (optional - will be derived from private key if empty)
PARADEX_ACCOUNT_ADDRESS=

# Use production endpoints (true/false, default: true)
PARADEX_PRODUCTION=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level filter (default: hft_bot=info)
RUST_LOG=hft_bot=info

# Log format: json or pretty (default: json)
LOG_FORMAT=pretty

# -----------------------------------------------------------------------------
# Optional: Supabase (if using dashboard persistence)
# -----------------------------------------------------------------------------
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_ANON_KEY=eyJ...
